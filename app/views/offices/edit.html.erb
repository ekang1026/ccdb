<% if @office.errors.any? %>
  <% @office.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Office #<%= @office.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_office/<%= @office.id %>" class="form-horizontal">
      <!-- Label and input for city_id -->
      <div class="form-group">
        <label for="city_id" class="col-sm-2 control-label">
          City
        </label>
        <div class="col-sm-10">
          <input type="text" id="city_id" name="city_id" placeholder="City" class="form-control" value="<%= @office.city_id %>">
        </div>
      </div>

      <!-- Label and input for company_id -->
      <div class="form-group">
        <label for="company_id" class="col-sm-2 control-label">
          Company
        </label>
        <div class="col-sm-10">
          <input type="text" id="company_id" name="company_id" placeholder="Company" class="form-control" value="<%= @office.company_id %>">
        </div>
      </div>

      <!-- Label and input for industry_id -->
      <div class="form-group">
        <label for="industry_id" class="col-sm-2 control-label">
          Industry
        </label>
        <div class="col-sm-10">
          <input type="text" id="industry_id" name="industry_id" placeholder="Industry" class="form-control" value="<%= @office.industry_id %>">
        </div>
      </div>

      <!-- Label and input for group_id -->
      <div class="form-group">
        <label for="group_id" class="col-sm-2 control-label">
          Group
        </label>
        <div class="col-sm-10">
          <input type="text" id="group_id" name="group_id" placeholder="Group" class="form-control" value="<%= @office.group_id %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Office" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

