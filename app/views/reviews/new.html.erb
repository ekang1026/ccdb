
<% if @review.errors.any? %>
<% @review.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h1>Add a Review</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_review" class="form-horizontal">
      <!-- Label and input for user_id -->
      <div class="form-group">
<!--         <label for="user_id" class="col-sm-2 control-label">
          User
        </label> -->
        <div class="col-sm-10">
          <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
        </div>
      </div>

      <!-- Label and input for office_id -->
<!--       <div class="form-group">
        <label for="office_id" class="col-sm-2 control-label">
          Office
        </label>
        <div class="col-sm-10">
          <input type="text" id="office_id" name="office_id" placeholder="Office" class="form-control" value="<%= @review.office_id %>">
        </div>
      </div>
    -->
    <!-- Label and input for review_description -->

    <div class="container">
      <div class="row" align="center">
        <div class="col-sm-3">
          <%=  select_tag(:city_id, options_from_collection_for_select(City.order(:name), :id, :name)) %>
        </div>
        <div class="col-sm-3">
          <%=  select_tag(:industry_id, options_from_collection_for_select(Industry.order(:name), :id, :name)) %>
        </div>
        <div class="col-sm-3">
          <%=  select_tag(:company_id, options_from_collection_for_select(Company.order(:name), :id, :name)) %>

        </div>

      </div>
    </div>

    <div class="form-group">
      <label for="review_description" class="col-sm-2 control-label">
        What was your summer experience like?
      </label>
      <div class="col-sm-10">
        <textarea id="review_description" name="review_description" placeholder="Over the summer I worked on ... My hours were generally ...  The office culture was ...." class="form-control" rows="3"><%= @review.review_description %></textarea>
      </div>
    </div>

    <!-- Label and input for review_pros -->
    <div class="form-group">
      <label for="review_pros" class="col-sm-2 control-label">
        What were the positive aspects of the summer?
      </label>
      <div class="col-sm-10">
        <textarea id="review_pros" name="review_pros" placeholder="The positive aspects of the summer were ..." class="form-control" rows="3"><%= @review.review_pros %></textarea>
      </div>
    </div>

    <!-- Label and input for review_cons -->
    <div class="form-group">
      <label for="review_cons" class="col-sm-2 control-label">
        What were the negative aspects of the summer?
      </label>
      <div class="col-sm-10">
        <textarea id="review_cons" name="review_cons" placeholder="The negative aspects of the summer were..." class="form-control" rows="3"><%= @review.review_cons %></textarea>
      </div>
    </div>

    <!-- Label and input for review_get_internship -->
    <div class="form-group">
      <label for="review_get_internship" class="col-sm-2 control-label">
        What are some tips to getting an internship?
      </label>
      <div class="col-sm-10">
        <textarea id="review_get_internship" name="review_get_internship" placeholder="In order to get an internship you should..." class="form-control" rows="3"><%= @review.review_get_internship %></textarea>
      </div>
    </div>

    <!-- Label and input for review_rating -->
    <div class="form-group">
      <label for="review_rating" class="col-sm-2 control-label">
        How would you rate the internship from 1-10?
      </label>


      <div class="col-sm-10">
        <input type="text" id="review_rating" name="review_rating" placeholder="Review rating" class="form-control" value="<%= @review.review_rating %>">
      </div>
    </div>

    <div class="form-group" ">
      <div class="col-sm-offset-2 col-sm-10">
        <input type="submit" value="Create Review" class="btn btn-primary">
      </div>
    </div>
  </form>
</div>
</div>

